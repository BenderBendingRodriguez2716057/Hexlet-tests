function isPerfect($num) {
    $i = 1;
    $sum = 0;
    while ($i < $num) {
        if ( $num % $i === 0) {
            $sum += $i;
        }
        $i += 1;
    }
    if ($num === 0) {
        return false;
    }
    elseif ( $sum === $num) {
        return true;
    }
    else {
        return false;
    }
}
